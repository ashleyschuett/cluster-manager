FROM golang:1.8-alpine as builder

RUN apk add --no-cache git gcc musl-dev

# add tools for debug and development purposes
RUN apk update && \
    apk add vim && \
    apk add glide

ENV SRC_DIR=/go/src/github.com/containership/cloud-agent/

WORKDIR /app

# Add the source code:
ADD . $SRC_DIR

# Build it:
RUN cd $SRC_DIR && \
    glide install && \
    go build -o coordinator cmd/cloud_coordinator/coordinator.go && \
    cp coordinator /app/


# Create Docker image of just the binary
FROM scratch as runner
COPY --from=builder ./app/coordinator /app/coordinator
ENTRYPOINT /app/coordinator
